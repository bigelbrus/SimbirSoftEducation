<resources xmlns:http="http://schemas.android.com/tools">

    <!-- Base application theme. Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/leaf</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/officina_sans</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ItemLabelTextAppearance">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/officina_sans</item>
        <item name="android:textColor">@color/light_olive_green</item>
    </style>
    <style name="InfoLabelTextAppearance">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>
        <item name="android:textColor">@color/black___30</item>
    </style>
    <style name="ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/turtle_green</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/leaf</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BottomButtonWithoutSpacing" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>>
        <item name="android:layout_height">@dimen/height_bottom_panel</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@drawable/selector_bottom_button</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:onClick">onBottomButtonClick</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomButton" parent="BottomButtonWithoutSpacing"/>


</resources>
