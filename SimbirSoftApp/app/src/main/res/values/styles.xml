<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:http="http://schemas.android.com/tools">

    <!-- Base application theme. Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/leaf</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProfileLargeTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black__87</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileSmallTextAppearance" parent="ProfileLargeTextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black__38</item>
    </style>

    <style name="ProfileMediumTextAppearance" parent="ProfileLargeTextAppearance">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/officina_sans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabIndicatorColor">@color/macaroni_and_cheese</item>
        <item name="tabTextColor">@color/tab_layout_colors</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>


    <style name="ItemLabelTextAppearance">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/officina_sans</item>
        <item name="android:textColor">@color/light_olive_green</item>
    </style>

    <style name="InfoLabelTextAppearance">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_xsmall</item>
        <item name="android:textColor">@color/black___30</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/turtle_green</item>
    </style>

    <style name="MenuText">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/leaf</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BottomButtonWithoutSpacing" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>>
        <item name="android:layout_height">@dimen/height_bottom_panel</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@drawable/selector_bottom_button</item>
        <item name="android:textSize">12sp</item>
        <item name="android:onClick">onBottomButtonClick</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogButtonBase" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black__87</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="iconPadding">@dimen/spacing_large</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:paddingEnd">@dimen/spacing_xlarge</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DialogButton" parent="DialogButtonBase"/>

    <style name="BottomButton" parent="BottomButtonWithoutSpacing" />

    <style name="SwitchStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/leaf</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/cool_grey</item>
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/black__38</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>


</resources>
