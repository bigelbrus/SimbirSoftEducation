<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/light_grey"
    android:layout_margin="10dp"
    android:layout_height="@dimen/height_help_item">
    <ImageView
        android:id="@+id/item_category_image"
        tools:src="@drawable/ic_logo_mss"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:contentDescription="@string/image_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_category_text"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/ItemLabelTextAppearance"
        android:layout_weight="1"
        tools:text="@string/item_example"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>