<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    android:layout_margin="@dimen/spacing_xsmall">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:layout_marginStart="@dimen/spacing_xxsmall"
            android:layout_marginEnd="@dimen/spacing_xxsmall"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/child" />

        <ImageView
            android:id="@+id/fade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/fade"
            card_view:layout_constraintBottom_toBottomOf="@+id/cardImage"
            card_view:layout_constraintEnd_toEndOf="@id/cardImage"
            card_view:layout_constraintStart_toStartOf="@id/cardImage"
            card_view:layout_constraintTop_toTopOf="@id/cardImage" />

        <TextView
            android:id="@+id/cardLabel"
            style="@style/CardLargeTextAppearance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_xlarge"
            android:layout_marginEnd="@dimen/spacing_xlarge"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cardImage"
            tools:text="Спонсоры отремонтируют школу-интернат" />

        <ImageView
            android:id="@+id/cardDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_xsmall"
            android:src="@drawable/ic_decor"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cardLabel" />

        <TextView
            android:id="@+id/cardInfo"
            style="@style/CardMediumTextAppearance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            card_view:layout_constraintBottom_toTopOf="@id/date_background"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cardDivider"
            tools:text="Дубовская школа-интернат для детей
с ограниченными возможностями здоровья стала первой в области
возможностями здоровья стала первой в области" />

        <View
            android:id="@+id/date_background"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_card_date"
            android:background="@color/turtle_green"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cardDate"
            style="@style/CardSmallTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_xsmall"
            android:drawableStart="@drawable/ic_icon_calendar"
            android:drawablePadding="@dimen/spacing_xsmall"
            card_view:layout_constraintEnd_toEndOf="@+id/date_background"
            card_view:layout_constraintStart_toStartOf="@+id/date_background"
            card_view:layout_constraintTop_toBottomOf="@+id/date_background"
            card_view:layout_constraintBottom_toTopOf="@+id/date_background"
            tools:text="Осталось 13 дней (21.09 - 20.10)" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>